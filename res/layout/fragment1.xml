<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  android:orientation="vertical"
    >

    <Button android:id="@+id/b1"
        android:layout_width="wrap_content" android:onClick="alertDialog"
        android:layout_height="wrap_content"
        android:text="AlertDialog" />
    
    <Button android:id="@+id/b2"
        android:layout_width="wrap_content" android:onClick="progressDialogSpinner"
        android:layout_height="wrap_content"
        android:text="ProgressDialogspinner" />
    
    <Button android:id="@+id/b3"
        android:layout_width="wrap_content" android:onClick="progressDialogHorizontal"
        android:layout_height="wrap_content"
        android:text="ProgressDialogHorizontal" />
    <Button android:id="@+id/b4"
        android:layout_width="wrap_content" android:onClick="customDialog"
        android:layout_height="wrap_content"
        android:text="CustomDialog" />
    <Button android:id="@+id/b5"
        android:layout_width="wrap_content" android:onClick="customDialog"
        android:layout_height="wrap_content"
        android:text="DialogFragment" />

</LinearLayout>
